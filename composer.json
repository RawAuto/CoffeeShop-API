{
    "name": "coffeeshop/api",
    "description": "A clean, modern REST API for a coffee shop ordering system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Ellie",
            "role": "Developer"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^10.5"
    },
    "autoload": {
        "psr-4": {
            "CoffeeShop\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CoffeeShop\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "test:unit": "phpunit --testsuite=Unit --colors=always",
        "test:integration": "phpunit --testsuite=Integration --colors=always",
        "analyse": "phpstan analyse --memory-limit=256M",
        "check": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
